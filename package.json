{
  "name": "@julr/factorio-monorepo",
  "type": "module",
  "version": "1.0.0-beta.4",
  "packageManager": "pnpm@7.11.0",
  "description": "",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Julien-R44",
  "homepage": "https://github.com/Julien-R44/[name]#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Julien-R44/[name].git"
  },
  "bugs": {
    "url": "https://github.com/Julien-R44/[name]/issues"
  },
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "unbuild --stub",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "prepublishOnly": "pnpm build",
    "release": "bumpp packages/*/package.json --commit \"chore(release): %s\" --push --tag && pnpm -r publish --access public",
    "stub": "pnpm -r --filter=./packages/* --parallel run stub",
    "build": "pnpm -r --filter=./packages/* run build",
    "test:coverage": "c8 pnpm test",
    "test": "ts-node-esm bin/test.ts",
    "test:sqlite": "cross-env DB=sqlite pnpm test",
    "test:better_sqlite": "cross-env DB=better_sqlite pnpm test",
    "test:postgres": "cross-env DB=postgres pnpm test",
    "test:mysql": "cross-env DB=mysql pnpm test",
    "test:mssql": "cross-env DB=mssql pnpm test",
    "test:all": "pnpm test:sqlite && pnpm test:postgres && pnpm test:mysql",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@japa/assert": "^1.3.6",
    "@japa/expect": "^2.0.1",
    "@japa/runner": "^2.2.1",
    "@japa/spec-reporter": "^1.3.1",
    "@julr/eslint-config": "^0.3.2",
    "@julr/factorio": "link:packages\\core",
    "@julr/japa-database-plugin": "^1.0.4",
    "@julr/japa-factorio-plugin": "link:packages\\japa-plugin",
    "@types/node": "^18.7.18",
    "better-sqlite3": "^7.6.2",
    "bumpp": "^8.2.1",
    "c8": "^7.12.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.1",
    "knex": "^2.3.0",
    "mysql2": "^2.3.3",
    "nodemon": "^2.0.20",
    "pg": "^8.8.0",
    "pnpm": "^7.11.0",
    "prettier": "^2.7.1",
    "sqlite3": "^5.1.1",
    "tedious": "^15.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "unbuild": "^0.8.11"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "openapi-types",
        "@babel/core",
        "@japa/core"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@julr"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "tests"
    ],
    "execMap": {
      "ts": "ts-node-esm"
    }
  }
}
